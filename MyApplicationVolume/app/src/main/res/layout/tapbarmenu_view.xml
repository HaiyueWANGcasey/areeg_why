<?xml version="1.0" encoding="utf-8"?>
<com.michaldrabik.tapbarmenulib.TapBarMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tapBarMenu"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="20dp"
    app:tbm_backgroundColor="@color/colorMid_yellow"
    app:tbm_menuAnchor="bottom"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/draw_i"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_draw_main"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/pinpoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_marker_main" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/auto_reconstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_neuron" />

    <ImageView
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_clear" />

</com.michaldrabik.tapbarmenulib.TapBarMenu>
