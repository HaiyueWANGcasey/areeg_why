<!--        app:layout_constraintBottom_toBottomOf="parent" />-->

    <com.penglab.hi5.basic.utils.view.ImageButtonExt
        android:id="@+id/ignore_file"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_normal"
        android:src="@drawable/ic_ignore_icon"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ToggleButton
        android:id="@+id/switch_marker_mode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true"
        android:textOff="stroke"
        android:textOn="point"
        android:textSize="10sp"
        android:background="@drawable/circle_normal"/>

    <ImageButton
        android:id= "@+id/hide_swc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd = "10dp"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_normal"
        android:src = "@drawable/ic_not_hide"/>


    <LinearLayout
        android:id ="@+id/add_marker_for_check"
        android:layout_width="200dp"
        android:background="@drawable/circle_normal"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id ="@+id/add_marker_red"
            android:layout_width = "40dp"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:layout_gravity="center"
            android:src = "@drawable/ic_add_marker_red"/>

        <ImageButton
            android:id ="@+id/add_marker_blue"
            android:layout_width = "40dp"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:layout_gravity="center"
            android:src = "@drawable/ic_add_marker_blue"/>

        <ImageButton
            android:id ="@+id/add_marker_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src = "@drawable/ic_add_marker_yellow"/>
        <ImageButton
            android:id = "@+id/delete_marker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src = "@drawable/ic_delete_marker_checkmode">

        </ImageButton>



    </LinearLayout>


