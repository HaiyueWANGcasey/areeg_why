    <ImageButton
        android:id= "@+id/add_marker_yellow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_normal"
        android:src = "@drawable/ic_marker_yellow"/>


    <LinearLayout
        android:id ="@+id/add_marker_for_check"
        android:layout_width="200dp"
        android:background="@drawable/circle_normal"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.penglab.hi5.basic.utils.view.ImageButtonExt
            android:id ="@+id/very_good_file"
            android:layout_width = "40dp"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:layout_gravity="center"
            android:background="@drawable/button_ripple"
            android:src = "@drawable/ic_verygood"/>

        <com.penglab.hi5.basic.utils.view.ImageButtonExt
            android:id ="@+id/good_file"
            android:layout_width = "40dp"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:layout_gravity="center"
            android:background="@drawable/button_ripple"
            android:src = "@drawable/ic_suprised2"/>

        <com.penglab.hi5.basic.utils.view.ImageButtonExt
            android:id ="@+id/ignore_file"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/button_ripple"
            android:src = "@drawable/ic_normal2"/>

        <com.penglab.hi5.basic.utils.view.ImageButtonExt
            android:id = "@+id/boring_file"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:background="@drawable/button_ripple"
            android:src = "@drawable/ic_boring">

        </com.penglab.hi5.basic.utils.view.ImageButtonExt>



    </LinearLayout>


