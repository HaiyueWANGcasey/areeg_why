<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.ui.userProfile.UserInfoActivity"
    android:orientation="vertical"
    android:background="@color/color_gray_bg">

    <com.penglab.hi5.core.ui.userProfile.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!--    头像-->

    <LinearLayout
        android:id="@+id/ll_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:background="@color/white">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/HeadView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/head_example2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify the portrait"
            android:textColor="@color/color_gray_bg2"
            android:layout_gravity="center"
            android:paddingLeft="15dp"/>

    </LinearLayout>
    <com.penglab.hi5.core.ui.userProfile.ItemGroup
        android:id="@+id/ig_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:jt_visible="false"
        app:paddingLeft="15dp"
        app:title="ID" />

    <com.penglab.hi5.core.ui.userProfile.ItemGroup
        android:id="@+id/ig_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:edt_hint_content="change nickname"
        app:paddingLeft="15dp"
        app:title="Nickname" />

    <com.penglab.hi5.core.ui.userProfile.ItemGroup
        android:id="@+id/ig_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:edt_hint_content="gender"
        app:paddingLeft="15dp"
        app:title="@string/gender"/>

    <com.penglab.hi5.core.ui.userProfile.ItemGroup
        android:id="@+id/ig_email"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:edt_hint_content="Unselected"
        app:paddingLeft="15dp"
        app:title="E-mail" />

    <com.penglab.hi5.core.ui.userProfile.ItemGroup
        android:id="@+id/ig_region"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:edt_hint_content="Unselected"
        app:paddingLeft="15dp"
        app:title="Region" />

    <com.penglab.hi5.core.ui.userProfile.ItemGroup
        android:id="@+id/ig_brithday"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:edt_hint_content="Unselected"
        app:paddingLeft="15dp"
        app:title="Birthday" />
</LinearLayout>
